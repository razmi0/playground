{
    "imports": {
        "autoprefixer": "npm:autoprefixer@^10.4.20",
        "hono": "jsr:@hono/hono@^4.6.16",
        "htmx.org": "npm:htmx.org@2.0.4",
        "postcss": "npm:postcss@^8.4.49",
        "tailwindcss": "npm:tailwindcss@^3.4.17"
    },
    "tasks": {
        "start": "deno run --allow-net --allow-read --watch main.tsx",
        "bundle": "deno run --allow-read --allow-write --allow-env --allow-net --allow-run --watch src/client/bundle.ts",
        "tw": "npx tailwindcss -i ./src/client/index.css -o ./public/index.css --watch"
    },
    "compilerOptions": {
        "jsx": "precompile",
        "jsxImportSource": "hono/jsx"
    }
}
